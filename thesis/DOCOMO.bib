@UNPUBLISHED{bbha01,
  author = {Harald Burchardt and Zubin Bharucha and Harald Haas and Gunther Auer},
  title = {{Uplink Interference Protection and Scheduling}},
  note = {Submitted to Global Communications Conference},
  abstract = {This paper investigates the effect of an uplink interference protection
	(ULIP) mechanism in a two-cell scenario with full frequency reuse.
	Uplink (UL) interference from neighbouring cells can be mitigated
	by reducing the transmit power of cochannel interfering mobile stations
	(MSs). This is done based on the target signal-to-noise-plus-interference
	ratio (SINR) and tolerable interference of the vulnerable link. Upon
	reduction of the transmit power, SINR and consequently, capacity
	gains are achieved. Priority bands are used to differentiate those
	MSs that are to be protected from interference and those that are
	required to sacrifice transmission power to facilitate the protection.
	Furthermore, a scheduling scheme is suggested in which a fair allocation
	of priority and non-priority resource blocks (RBs) attempts to enhance
	the throughput gains acquired through ULIP. This work shows that,
	in terms of achieved throughput, for a loss of approximately 25%
	for non-priority MSs, a gain of up to 65% is made available to priority
	MSs. Furthermore, since ULIP makes use of already existing Long-Term
	Evolution (LTE) signalling techniques, only minimal signalling overhead
	arises.},
  owner = {zbharucha},
  timestamp = {2010.03.16}
}

@INPROCEEDINGS{bbha1101,
